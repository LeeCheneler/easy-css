{
  "name": "easy-css",
  "version": "1.0.3",
  "devDependencies": {
    "autoprefixer": "^6.6.0",
    "clean-css": "^3.4.0",
    "node-sass": "^4.0.0",
    "postcss-cli": "^2.6.0",
    "stylelint": "^7.7.0",
    "stylelint-config-sass-guidelines": "^1.1.0",
    "stylelint-scss": "^1.3.4",
    "stylelint-selector-bem-pattern": "^1.0.0"
  },
  "scripts": {
    "build": "node-sass ./demo/sass/main.scss demo/index.css && npm run autoprefix && npm run clean",
    "watch": "npm run build && node-sass ./demo/sass/main.scss demo/index.css -w",
    "lint": "stylelint \"*/**/*.scss\" --syntax scss",
    "autoprefix": "postcss -u autoprefixer -r ./demo/index.css",
    "clean": "cleancss -o demo/index.css demo/index.css"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leecheneler/easy-css.git"
  },
  "keywords": [
    "css",
    "itcss",
    "bemit",
    "bem",
    "sass",
    "oocss",
    "grid"
  ],
  "author": "Lee Cheneler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leecheneler/easy-css/issues"
  },
  "homepage": "https://leecheneler.github.io/easy-css/demo"
}
